extends ../../layouts/default.pug

include ../../mixins/alert.pug

block main  
    if(role.permissions.includes("roles_edit"))
        h1(class="mb-4") Edit permission

        +alert-error("5000")

        form(
            action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
            method="POST"
        )
            div(class="form-group")
                label(for="title") Title 
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                    value=data.title
                )
        
            div(class="form-group")
                label(for="desc") Description 
                textarea(
                    class="form-control"
                    id="desc"
                    name="description"
                    rows="5"
                ) #{data.description}
        
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Edit new permission

