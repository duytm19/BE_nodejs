extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main  

    
    +alert-error("5000")

    h1(class="mb-4") Setting General

    
    form(
        action=`${prefixAdmin}/settings/general?_method=PATCH`
        enctype="multipart/form-data"
        method="POST"
    )
        div(class="form-group")
            label(for="websiteName") Website Name 
            input(
                type="text"
                class="form-control"
                id="websiteName"
                name="websiteName"
                value=(settingGeneral? settingGeneral.websiteName : "")
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="logo") Logo 
            input(
                type="file"
                class="form-control-file"
                id="logo"
                name="logo"
                accept="image/*"
                upload-image-input
            )
            button(
                type="button" 
                class="btn btn-secondary delete-hidden" 
                delete-image-preview 
            ) X
            img(
                src=value=(settingGeneral? settingGeneral.logo : "")
                upload-image-preview
                class="image-preview"
            )

        div(class="form-group")
            label(for="address") Address
            input(
                type="text"
                class="form-control"
                id="address"
                name="address"
                value=value=(settingGeneral? settingGeneral.address : "")
            )
        div(class="form-group")
            label(for="phone") Phone
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=value=(settingGeneral? settingGeneral.phone : "")
            )
        div(class="form-group")
            label(for="email") Email
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=value=(settingGeneral? settingGeneral.email : "")
            )
        div(class="form-group")
            label(for="copyright") Copyright
            input(
                type="text"
                class="form-control"
                id="copyright"
                name="copyright"
                value=value=(settingGeneral? settingGeneral.copyright : "")
            )

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Update
