extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main  
    
    +alert-success("5000")
    +alert-error("5000")

     

    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName")  Full Name *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=user.fullName
            )
    
        div(class="form-group")
            label(for="email") Email 
            input(
                type="text"
                class="form-control"
                id="email"
                name="email"
                required
                value=user.email
            )
        div(class="form-group")
            label(for="password") Password 
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )
        div(class="form-group")
            label(for="phone") Phone
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=user.phone
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Avatar 
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            button(
                type="button" 
                class="btn btn-secondary delete-hidden" 
                delete-image-preview 
            ) X
            img(
                src=user.avatar
                upload-image-preview
                class="image-preview"
            )
    
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Edit Account
    
