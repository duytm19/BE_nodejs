include ../mixins/alert.pug


doctype html
html(lang="en")
    head
        title #{pageTitle}
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/style.css")
        link(rel="stylesheet" type="text/css" href="https://unpkg.com/file-upload-with-preview/dist/style.css")

        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.7/viewer.css")
        
    body 
        include ../partials/header.pug

        block main 

        +alert-success("5000")
        +alert-error("5000")

        include ../partials/footer.pug
        script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js")
        

        //- Socket IO
        script(src="/socket.io/socket.io.js")
        script(src="/js/socket.js")
        //- Upload image with preview
        script( src="https://unpkg.com/file-upload-with-preview/dist/index.js")
        
        //- Emoji picker element
        script(type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js")
        //- Icon Font Awesome
        script(src="https://kit.fontawesome.com/17665bdb10.js" crossorigin="anonymous")
        //- ViewerJs
        script(src="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.7/viewer.js")
        
        //- Chat
        script(type="module" src="/js/chat.js")

        script(src='/js/script.js')
        