extends ../../layouts/default.pug
include ../../mixins/box-head.pug



block main 
    .container.my-3
        include ../../partials/list-btn-users.pug
        .row   
            .col-12 
                +box-head("Featured Products")
        .row(data-users-accept=user.id) 
            each user in users 
                .col-6(user-id=user.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar:"/images/avatar.jpg")
                                alt= user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-button")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend=user.id
                                ) Accept

                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-refuse-friend=user.id
                                ) Refuse
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-deleted-friend=user.id
                                    disable
                                ) Deleted
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-accepted-friend=user.id
                                    disable
                                ) Accepted
block script 
    script(src="/js/users.js")